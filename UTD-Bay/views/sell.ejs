<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>UTD Bay</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<!-- <script src="./BuySell.js"></script> -->
</head>

<body class="bg-dark">
	<div id="sell">
		<section class="vh-100 gradient-custom">
			<div class="container py-5 h-100">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-12 col-md-8 col-lg-6 col-xl-5">
						<div class="card" style="border-radius: 1rem; background-color: #c25e03;">
							<div class="card-body p-5 text-center">

								<div class="mb-md-5 mt-md-4 pb-5">

									<h2 class="fw-bold mb-2 text-uppercase">Sell an Item</h2>
									<!-- <p class="text-white-50 mb-5">Please enter your login and password!</p> -->

									<!-- <div class="dropdown">
										<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											Select Item Condition
										</button>
										<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
											<a class="dropdown-item" href="#">As good as new!</a>
											<a class="dropdown-item" href="#">Slightly used</a>
											<a class="dropdown-item" href="#">Roughly used</a>
										</div>
									</div> -->

									<form action="/sell" method="post">
										<div class="dropdown mb-4">
											<label for="category">Category:</label>
											<select name="category" id="cars">
												<option value="Furniture">Furniture</option>
												<option value="Electronic">Electronic</option>
												<option value="Household">Household</option>
												<option value="Stationary">Stationary</option>
												<option value="Books">Books</option>
											</select>
										</div>

										<!-- <br/> -->
										<div class="form-outline form-white mb-4">
											<input type="text"  name="itemName" id="itemname" class="form-control form-control-lg" />
											<label class="form-label" for="itemname">Item Name</label>
										</div>

										<div class="form-outline form-white mb-4">
											<input type="file" name="image" class="form-control" id="avatar" accept="image/png, image/jpeg">
											<!-- <input type="file" name="image" class="form-control" id="itempic" download="/home/hp/vidzy-ejs (copy)/new-image-name.jpg"/> -->
											<label class="form-label" for="itempic">Upload Item Image</label>
										</div>

										<div class="form-outline form-white mb-4">
											<input name="availability" type="date" id="availableDate"
												class="form-control form-control-lg" />
											<label class="form-label" for="availableDate">Availability Date</label>
										</div>
										<div class="form-outline form-white mb-4">
											<input name="desc" type="text" id="itemdesc" class="form-control form-control-lg" />
											<label class="form-label" for="itemdesc">Item Description</label>
										</div>
										<div class="form-outline form-white mb-4">
											<input name="area" type="text" id="area" class="form-control form-control-lg" />
											<label class="form-label" for="itemdesc">Area zipcode</label>
										</div>
										<div class="form-outline form-white mb-4">
											<input name="cost" type="text" id="price" class="form-control form-control-lg" />
											<label class="form-label" for="price">Price</label>
										</div>
										<div class="d-flex justify-content-center">
											<button type="submit"
												class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Post Ad</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>

</body>

</html>